<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_theme_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-50dp"
        android:layout_marginTop="-5dp"
        android:background="@drawable/button_blue"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txtLevelHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Level 1 Finished.."
            android:textColor="@color/text_color"
            android:textSize="@dimen/dialog_heading_text_size"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/lblLevelTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="525.62"
        android:textColor="@color/White"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLevelTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblLevelTotalScore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="This Level Score"
        android:textColor="@color/White"
        android:textSize="@dimen/dialog_heading_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLevelScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLevelTotalScore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="525"
        android:textColor="@color/White"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblLevelScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtLevelScore"
        android:layout_centerHorizontal="true"
        android:text="Total Score:"
        android:textColor="@color/White"
        android:textSize="@dimen/dialog_heading_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lblLevelTotalScore"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnHome"
            style="@style/style_btn_setting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_blue"
            android:text="Home" />

        <Button
            android:id="@+id/btnPlayAgain"
            style="@style/style_btn_setting_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/button_blue"
            android:text="Play Again" />
    </LinearLayout>

     <TextView
        android:id="@+id/txtShareScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="22dp"
        android:text="Share Score"
        android:textColor="@color/White"
        android:textSize="@dimen/dialog_heading_text_size"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtShareScore"
        android:layout_marginTop="18dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnFacebook"
            android:layout_width="@dimen/next_prev_button_width_height"
            android:layout_height="@dimen/next_prev_button_width_height"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:background="@drawable/btn_facebook_share" />

        <Button
            android:id="@+id/btnGooglePlus"
            android:layout_width="@dimen/next_prev_button_width_height"
            android:layout_height="@dimen/next_prev_button_width_height"
            android:layout_marginLeft="@dimen/menu_button_top_margin"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:background="@drawable/btn_google_plus_share" />

        <Button
            android:id="@+id/btnShare"
            android:layout_width="@dimen/next_prev_button_width_height"
            android:layout_height="@dimen/next_prev_button_width_height"
            android:layout_marginLeft="@dimen/menu_button_top_margin"
            android:layout_marginTop="@dimen/menu_button_top_margin"
            android:background="@drawable/btn_share" />
    </LinearLayout>
    

</RelativeLayout>